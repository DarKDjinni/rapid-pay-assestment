{
  "AllowedHosts": "*",
  "UseSqlite": false,
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    },
    "Console": {
      "LogLevel": {
        "Default": "Information",
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      },
      "FormatterName": "json",
      "FormatterOptions": {
        "SingleLine": true,
        "IncludeScopes": true,
        "TimestampFormat": "yyyy-MM-dd HH:mm:ss",
        "UseUtcTimestamp": true,
        "JsonWriterOptions": {
          "Indented": true
        }
      }
    }
  },
  "ConnectionStrings": {
    "RapidPaySqlServer": "DEFAULT_SQLSERVER_CONNECTION_STRING",
    "RapidPaySqlite": "DEFAULT_SQLITE_CONNECTION_STRING"
  },
  // For simplicity the Secrets or Keys are just plain text in the config instead of encrypted secrets
  "JwtConfiguration": {
    "Audience": "Audience",
    "Issuer": "Issuer",
    "Key": "Key"
  },
  "EncryptionConfiguration": {
    "Key": "12345678901234567890123456789012",
    "InitVector": "1234567890123456"
  }
}
